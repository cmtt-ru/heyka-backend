{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": "eslint:recommended",
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "eol-last": ["error", "always"],
        "no-unused-vars": ["error", { "args": "none" }],
        "strict": ["error", "global"],
        "semi": ["error", "always"],
        "indent": ["error", 2],
        "max-len": ["error", { "code": 120 }],
        "require-atomic-updates": "off"
    }
}